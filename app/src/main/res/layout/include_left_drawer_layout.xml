<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_left_drawer_layout"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/menu_mine_ll_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                style="@style/Default_ImageView"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="12dp"
                android:src="@mipmap/logoew" />

            <TextView
                android:id="@+id/fg_mine_employee_name"
                style="@style/style_tv_content"
                android:layout_marginTop="12dp"
                android:text="TextView"
                android:textColor="@color/white" />
        </LinearLayout>


        <RelativeLayout style="@style/style_slide_menu_relative_layout">

            <TextView
                android:id="@+id/menu_mine_hrcode"
                style="@style/style_tv_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="13dp"
                android:text="TextView" />
        </RelativeLayout>

        <View style="@style/dividing_line" />


        <RelativeLayout style="@style/style_slide_menu_relative_layout">


            <TextView
                android:id="@+id/fg_mine_duty_name"
                style="@style/style_tv_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="13dp"
                android:text="TextView" />
        </RelativeLayout>

        <View style="@style/dividing_line" />

        <RelativeLayout style="@style/style_slide_menu_relative_layout">

            <TextView
                android:id="@+id/fg_mine_hospital_id"
                style="@style/style_tv_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="13dp"
                android:text="TextView" />
        </RelativeLayout>

        <View style="@style/dividing_line" />

        <RelativeLayout
            android:id="@+id/menu_mine_delete_db"
            style="@style/style_slide_menu_relative_layout">

            <TextView
                style="@style/style_tv_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="13dp"
                android:text="删除缓存" />
        </RelativeLayout>

        <View style="@style/dividing_line" />

        <RelativeLayout
            android:id="@+id/menu_mine_quit"
            style="@style/style_slide_menu_relative_layout">

            <TextView
                style="@style/style_tv_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="13dp"
                android:text="退出登录" />
        </RelativeLayout>

        <View style="@style/dividing_line" />


    </LinearLayout>

</RelativeLayout>